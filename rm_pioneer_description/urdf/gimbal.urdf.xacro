<?xml version="1.0" encoding="utf-8"?>

<robot name="gimbal"
    xmlns:xacro="http://ros.org/wiki/xacro">

    <link name="base_link" />

    <link name="yaw_link">
        <inertial>
            <origin xyz="-0.026886 -0.023348 0.1049" rpy="0 0 0" />
            <mass value="1.1684" />
            <inertia ixx="0.0016395" ixy="7.3117E-07" ixz="0.00029349" iyy="0.0022548" iyz="-4.057E-06" izz="0.0011708" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://rm_pioneer_description/meshes/hero/yaw_link.stl" />
            </geometry>
            <material name="black">
                <color rgba="0.3 0.3 0.3 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://rm_pioneer_description/meshes/hero/yaw_link.stl" />
            </geometry>
        </collision>
    </link>

    <joint name="yaw_joint" type="continuous">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="yaw_link" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="pitch_link">
        <inertial>
            <origin xyz="0.091213 0.0022754 0.01373" rpy="0 0 0" />
            <mass value="1.237" />
            <inertia ixx="0.00067034" ixy="8.0868E-07" ixz="-1.3744E-05" iyy="0.0016262" iyz="-2.3281E-06" izz="0.0019309" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://rm_pioneer_description/meshes/hero/pitch_link.stl" />
            </geometry>
            <material name="gray">
                <color rgba="0.75294 0.75294 0.75294 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://rm_pioneer_description/meshes/hero/pitch_link.stl" />
            </geometry>
        </collision>
    </link>

    <joint name="pitch_joint" type="revolute">
        <origin xyz="-0.041042 0 0.17276" rpy="0 0 0" />
        <parent link="yaw_link" />
        <child link="pitch_link" />
        <axis xyz="0 1 0" />
        <limit lower="-0.6" upper="0.5" effort="1.2" velocity="31"/>
    </joint>

    <link name="shooter_link" />

    <joint name="shooter_joint" type="fixed">
        <origin xyz="-0.041042 0 0.17276" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="shooter_link" />
    </joint>

    <link name="camera_base_link">
        <inertial>
            <origin xyz="0.014834 -3.0881E-18 0" rpy="0 0 0" />
            <mass value="0.052061" />
            <inertia ixx="6.6064E-06" ixy="2.1459E-21" ixz="-1.7784E-21" iyy="2.3578E-05" iyz="-2.5012E-22" izz="2.3576E-05" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://rm_pioneer_description/meshes/hero/camera_base_link.stl" />
            </geometry>
            <material name="cyan">
                <color rgba="0.3 0.7 0.8 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://rm_pioneer_description/meshes/hero/camera_base_link.stl" />
            </geometry>
        </collision>
    </link>

    <joint name="camera_base_joint" type="fixed">
        <origin xyz="0.15839 0 -0.05" rpy="0 0 0" />
        <parent link="pitch_link" />
        <child link="camera_base_link" />
        <axis xyz="0 0 0" />
    </joint>

    <link name="camera_optical_frame" />

    <joint name="camera_optical_joint" type="fixed">
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
        <parent link="camera_base_link" />
        <child link="camera_optical_frame" />
    </joint>
</robot>